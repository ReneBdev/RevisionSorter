<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity"
      minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="70.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="sample.SortingRowController">
   <children>
      <Pane prefHeight="70.0" prefWidth="100.0">
         <children>
            <Label layoutX="23.0" layoutY="27.0" text="Revision ID" />
         </children>
      </Pane>

      <Pane prefHeight="70.0" prefWidth="400.0">
         <children>
            <TextArea fx:id="textArea"
                      layoutX="5.0" layoutY="5.0"
                      prefHeight="60.0" prefWidth="390.0"
                      wrapText="true" />
         </children>
      </Pane>

      <Pane maxHeight="240.0" prefHeight="70.0" prefWidth="100.0">
         <children>
            <Button fx:id="sortButton"
                    layoutX="18.0" layoutY="23.0"
                    mnemonicParsing="false"
                    onAction="#sortTextField"
                    text="Sortieren" />
         </children>
      </Pane>
   </children>
</HBox>
